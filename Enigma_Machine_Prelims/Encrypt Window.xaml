<Window x:Class="Enigma_Machine_Prelims.Encrypt_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Enigma_Machine_Prelims"
        mc:Ignorable="d"
        Title="Encrypt_Window" Height="300" Width="350">
    <Grid Margin="0,0,0,15">
        <Grid.Background>
            <ImageBrush ImageSource="/Encryption Window.png"/>
        </Grid.Background>
        <Label Content="Input Message:" HorizontalAlignment="Left" Margin="34,14,0,0" FontWeight="Bold" FontFamily="Courier New" Height="29" VerticalAlignment="Top"/>
        <Label Content="Encrypted Message:" HorizontalAlignment="Left" Margin="200,16,0,0" FontWeight="Bold" FontFamily="Courier New" Height="27" VerticalAlignment="Top"/>
        <Label Content="Encrypted Message &#xD;&#xA;with Mirroring:" Margin="200,129,0,0" FontWeight="Bold" FontFamily="Courier New" Height="46" VerticalAlignment="Top" HorizontalAlignment="Left" Width="135"/>

        <Label x:Name="lblInput" Content="Input" HorizontalAlignment="Left" Margin="34,40,0,0" Width="45" FontFamily="Courier New" Height="26" VerticalAlignment="Top"/>
        <Label x:Name="lblEncrpyt" Content="Encrypt" HorizontalAlignment="Left" Margin="200,40,0,0" Height="28" VerticalAlignment="Top" FontFamily="Courier New"/>
        <Label x:Name="lblEncrpytMirror" Content="Mirror" HorizontalAlignment="Left" Margin="200,157,0,0" Height="26" VerticalAlignment="Top" FontFamily="Courier New"/>
    </Grid>
</Window>
